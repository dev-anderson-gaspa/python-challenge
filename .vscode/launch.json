{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py", 
            "console": "integratedTerminal",
            "args": [
                "run",
                "app.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
            ], 
            "env": {
                "PYTHONPATH": "${workspaceFolder}" 
            }
        }
    ]
}